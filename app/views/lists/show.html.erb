<div class="banner parent" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/6899765/pexels-photo-6899765.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2);">
    <h1><%= @list.name %></h1>
    <div class="badge bg-warning text-wrap py-2 child" style="width: 6rem;">
      <%= @list.bookmarks.count %> Movies
    </div>
</div>

<div class="container">
  <div class="cards my-5">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <img src="<%= bookmark.movie.poster_url %>" />
      <div class="card-trip-infos">
        <div>
          <h2><%= bookmark.movie.title %> <%= bookmark.movie.rating %> <i class="fa-solid fa-star text-warning"></i></h2>
          <p><%= bookmark.movie.overview %></p>
          <div class="d-flex justify-content-between">
            <div class="d-flex">
              <i class="fa-solid fa-quote-left"></i>
              <h2><%= bookmark.comment %></h2>
            </div>
            <h2><%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></h2>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>

  <h2>Add a new movie</h2>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit class:"btn btn-primary" %>
  <% end %>

  <h2>Add a Review</h2>
  <%= simple_form_for [@list, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :comment %>
    <%= f.submit class:"btn btn-primary" %>
  <% end %>
</div>

<ul>
  <% @list.reviews.each do |review| %>
  <li><%= review.comment %></li>
  <% end %>
</ul>
<%= render "form", list: @list, bookmark: @bookmark %>
