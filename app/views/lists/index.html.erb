<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/6899765/pexels-photo-6899765.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2);">
    <h1>Save any kind of movies</h1>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center my-5">
    <h2>My Lists</h2>
    <%= link_to "Create a movie list", new_list_path, class:"btn btn-primary" %>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
        <%= link_to list.name, list_path(list), class:"text-decoration-none text-light" %>
      </div>
    <% end %>
  </div>
</div>
